{% extends 'base.html.twig' %}

{% block title %}Your basket! {% endblock %}

{% block body %}
<div class="bg-light p-3">
<h1>Your basket</h1>
</div>
{% if items | length >0 %}
    <table class="table">
        <thead> 
            <tr>
                <th></th>
                <th>Book</th>
                <th>Price €</th>
                <th>Quantity</th>
                <th>Total €</th>
                <th></th>
            </tr>
        </thead> 
        <tbody>
        {% for item in items %}
            <tr>
                <td><img src="{{ item.book.image}}" width="50" height="60"/></td>
                <td>{{ item.book.title}}</td>
                <td>{{ item.book.price}}</td>
                <td>{{ item.quantity}}</td>
                <td>{{ item.book.price * item.quantity}} </td>
                <td>
                <a href="{{ path('card_remove' , {'id':item.book.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <td colspan="3" class="text-center">Total: </td>
            <td>{{ total }} €</td>
        </tfoot>
    </table>
 <a href="{{ path('pay')}}" class="btn btn-success btn" style="position:absolute; left : 680px "><i class="far fa-credit-card"> </i> Pay your bill </a>
{% else %}
<p>Oups! ... your basket is empty </p>
{% endif %}


{% endblock %}
